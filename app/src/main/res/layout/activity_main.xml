<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewRed"
        android:textColor="#ffff"
        android:textSize="30sp"
        android:background="#f20"
        android:text="Red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/textViewRed"
        android:id="@+id/textViewGreen"
        android:textColor="#ffff"
        android:textSize="30sp"
        android:background="#5AB635"
        android:text="Green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/textViewGreen"
        android:id="@+id/textViewBlue"
        android:textColor="#ffff"
        android:textSize="30sp"
        android:background="#03A9F4"
        android:text="Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/textViewBlue"
        android:id="@+id/textViewOrange"
        android:textColor="#ffff"
        android:textSize="30sp"
        android:background="#B58E21"
        android:text="Orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/textViewOrange"
        android:id="@+id/textViewGray"
        android:textColor="#ffff"
        android:textSize="30sp"
        android:background="#676362"
        android:text="Gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/textViewGray"
        android:id="@+id/textViewPink"
        android:textColor="#ffff"
        android:textSize="30sp"
        android:background="#CC43B7"
        android:text="Pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>